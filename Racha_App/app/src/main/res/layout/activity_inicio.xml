<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Topo com logo e perfil -->

        <!-- Welcome message -->

        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_r"
                android:layout_width="152dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/racha" />

            <Space
                android:layout_width="97dp"
                android:layout_height="15dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_view"
                android:textColor="#FF0000" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:src="@drawable/botaonotificacoes"
                android:textColor="#FF0000" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="37dp"
                android:contentDescription="Perfil"
                android:src="@drawable/perfil" />

        </LinearLayout>

        <!-- VIEW DE SALDO REUTILIZÁVEL -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textBemVindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Olá, Usuário!"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <include layout="@layout/view_saldo" />

        <!-- Atalhos -->

        <!-- Descubra mais -->
        <LinearLayout
            android:id="@+id/atalhosLayout"
            android:layout_width="381dp"
            android:layout_height="67dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="34dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#3A3A3A"
                    android:src="@drawable/historia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Extrato"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#3A3A3A"
                    android:src="@drawable/deposito" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Recargas"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/atalhoCartoes"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/cartao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cartões"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/atalhoGrupos"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/grupo_de_usuarios" />

                <!-- Use o mesmo drawable -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Grupos"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/atalhoNotificacoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Crie um drawable para ic_notification -->

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:text="Descubra mais"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Plano Casal"
                        android:textColor="#FF0000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/familia"
                        android:contentDescription="Imagem decorativa plano família" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Plano Família"
                        android:textColor="#FF0000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/casal"
                        android:contentDescription="Imagem decorativa plano casal"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>